$TTL  1D
@	IN  SOA dns.{{ node.cluster }}.example.com. root.{{ node.cluster }}.example.com. (
		2019022400 ; serial
		3h	   ; refresh
		15	   ; retry
		1w	   ; expire
		3h	   ; minimum
		)
	IN NS dns.{{ node.cluster }}.example.com.

dns			IN	A {{ node.ip }}
api			IN 	A {{ node.ip }}
api-int		IN 	A {{ node.ip }}
*.apps		IN 	A {{ node.ip }}

{{ node.name }} IN A {{ node.ip }}

; End of {{ node.cluster }}.example.com.zone
