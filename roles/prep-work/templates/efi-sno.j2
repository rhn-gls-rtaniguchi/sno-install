set default="1"

function load_video {
  insmod efi_gop
  insmod efi_uga
  insmod video_bochs
  insmod video_cirrus
  insmod all_video
}

load_video
set gfxpayload=keep
insmod gzio
insmod part_gpt
insmod ext2

set timeout=5
### END /etc/grub.d/00_header ###

menuentry 'Install Single Node OpenShift' --class fedora --class gnu-linux --class gnu --class os {
	linux vmlinuz-coreos initrd=initrd-coreos.img,rootfs-coreos.img ip={{ node.ip }}::172.25.254.254:255.255.255.0:{{ node.name }}.{{ node.cluster }}.example.com:{{ network_adapter }}:none:172.25.254.250 rd.neednet=1 console=tty0 random.trust_cpu=on ignition.firstboot ignition.platform.id=metal coreos.inst.install_dev=/dev/sda pcie_aspm=off pcie_port_pm=off coreos.live.rootfs_url={{ images_url }}/rhcos-{{ rhcos_ver }}-x86_64-live-rootfs.x86_64.img coreos.inst.ignition_url={{ ignitions_url }}/{{ node.name }}-{{ node.cluster }}.ign 
  initrd initrd-coreos.img 
}
