variant: openshift
version: {{ rhcos_ver }}
metadata:
  name: 01-master-network-ens3
  labels:
    machineconfiguration.openshift.io/role: master
storage:
  files:
    - path: /etc/NetworkManager/system-connections/ens3.nmconnection
      mode: 0600
      overwrite: true
      contents:
        inline: |
          [connection]
          id=ens3
          type=ethernet
          interface-name=ens3

          [ethernet]
          mtu=1500

          [ipv4]
          address1={{ node.ip }}/24,172.25.254.254
          dns=172.25.254.254;
          method=manual

          [ipv6]
          method=disabled

    - path: /etc/hostname
      mode: 0644
      overwrite: true
      contents:
        inline: |
          {{ node.name }}.{{ node.cluster }}.ilt.example.com
